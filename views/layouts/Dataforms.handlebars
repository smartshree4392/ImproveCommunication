<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title></title>
  </head>
  <body>

    <div class="container py-5">
				<div class="row">
						<div class="col-md-12">
								<div class="row">
										<!--/col-->
										<div class="col-md-8 offset-md-2">
												<!-- form user info -->
												<div class="card card-outline-secondary">
														<div class="card-header">
																<h3 class="mb-0">Information</h3>
														</div>
														<div class="card-body">
																<form class="form" role="form" autocomplete="off">
																		<div class="form-group row"> <!-- Title -->
																				<label for="title_name_id" class="col-lg-3 col-form-label form-control-label">Title</label>
																				<div class="col-lg-9">
																						<input type="text" class="form-control" id="title_name_id" name="title_name" placeholder="Title Name">																				</div>
																		</div>
																		<div class="form-group row"> <!-- Alloted -->
																				<label for="alloted_id" class="col-lg-3 col-form-label form-control-label">Alloted</label>
																				<div class="col-lg-9">
																						<input type="text" class="form-control" id="alloted_id" name="alloted" placeholder="Alloted Details">
																				</div>
																		</div>
																		<div class="form-group row"> <!-- Project -->
																				<label for="project_id" class="col-lg-3 col-form-label form-control-label">Project</label>
																				<div class="col-lg-9">
																					<input type="text" class="form-control" id="project_id" name="project" placeholder="">
																				</div>
																		</div>
																		<div class="form-group row"> <!-- Comment -->
																				<label for="comment_id" class="col-lg-3 col-form-label form-control-label">Comment</label>
																				<div class="col-lg-9">
																						<textarea class="form-control" id="comment_id" name="comment" rows="3" placeholder=""></textarea>
																				</div>
																		</div>
																		<div class="form-group row"> <!-- Estimated Time-->
																				<label for="estimated_id" class="col-lg-3 col-form-label form-control-label">Estimated Time</label>
																				<div class="col-lg-9">
																						<input type="date" class="form-control" id="estimated_id" name="estimated" max="3000-12-31" min="1000-01-01" class="form-control">
																				</div>
																		</div>
																		<div class="form-group row"> <!-- Reset/Submit-->
																				<label class="col-lg-3 col-form-label form-control-label"></label>
																				<div class="col-lg-9">
																						<input type="reset" class="btn btn-secondary" value="Cancel">
																						<input type="submit" class="btn btn-primary" value="Submit">
																				</div>
																		</div>
																</form>
														</div>
												</div>
												<!-- /form user info -->
										</div>
										<!--/col-->
								</div>
								<!--/row-->
						</div>
						<!--/col-->
				</div>
		</div>
		<!--/container-->
  </body>
</html>